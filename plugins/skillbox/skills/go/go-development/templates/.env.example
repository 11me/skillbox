# Application Configuration
# Copy this file to .env and adjust values

# Application
APP_NAME={{APP_NAME}}
LOG_LEVEL=info  # debug, info, warn, error

# HTTP Server
HTTP_HOST=0.0.0.0
HTTP_PORT=8080

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME={{APP_NAME}}
DB_USER={{APP_NAME}}
DB_PASSWORD=secret
DB_MAX_CONNS=10
DB_MIN_CONNS=2
DB_SSL_MODE=disable  # disable, require, verify-ca, verify-full

# Optional: Redis
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Optional: JWT Authentication
# JWT_SECRET=your-secret-key-here
# JWT_EXPIRY=24h

# Optional: External Services
# API_KEY=
# WEBHOOK_URL=
